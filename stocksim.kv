<ProfileScreen> :
    name : 'profile'

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'greybackground.jpg'

    RelativeLayout:
        Button:
            text: 'Main'
            pos_hint: {'right': .055, 'top': .99}
            size_hint: [.05,.98]
            on_press:
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'

        Button:
            text: 'Exit'
            pos_hint: {'right': 0.995, 'top': .105}
            size_hint: [.15,.1]
            on_press:
                exit()

        Label:
            pos_hint: {'right': .65,'top': 1.4}
            text: 'Balance'
            bold: True
            underline: True
        Label:
            pos_hint: {'right': 1,'top': 1}
            text: 'Balance'
